apiVersion: v1
kind: Secret
metadata:
  name: {{ include "webproject.fullname" . }}-db-root
  labels: {{- include "webproject.labels" . | nindent 4 }}
type: Opaque
data:
  root-password: {{ include "webproject.secretOrRand" (list .Release.Namespace (printf "%s-db-root" (include "webproject.fullname" .)) "root-password" 24) }}
