apiVersion: v1
kind: Secret
metadata:
  name: {{ include "webproject.fullname" . }}-db-b-credentials
  labels: {{- include "webproject.labels" . | nindent 4 }}
type: Opaque
data:
  username: {{ .Values.db.b.user | b64enc }}
  database: {{ .Values.db.b.name | b64enc }}
  password: {{ include "webproject.secretOrRand" (list .Release.Namespace (printf "%s-db-b-credentials" (include "webproject.fullname" .)) "password" 24) }}
