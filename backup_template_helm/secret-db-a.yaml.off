apiVersion: v1
kind: Secret
metadata:
  name: {{ include "webproject.fullname" . }}-db-a-credentials
  labels: {{- include "webproject.labels" . | nindent 4 }}
type: Opaque
data:
  username: {{ .Values.db.a.user | b64enc }}
  database: {{ .Values.db.a.name | b64enc }}
  password: {{ include "webproject.secretOrRand" (list .Release.Namespace (printf "%s-db-a-credentials" (include "webproject.fullname" .)) "password" 24) }}
